<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Read Users</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-10 bg-gray-50">

  <!-- Back to Home Button -->
  <a href="/" class="p-4 text-white bg-pink-400 rounded-lg font-bold inline-block mb-6">Back To Home</a>

  <!-- Heading -->
  <h1 class="text-2xl font-bold text-center mb-6">Read All Users</h1>

  <!-- User Cards Container -->
  <div class="users flex gap-6 flex-wrap justify-center">

    <% users.forEach(user => { %>
      <div class="user bg-white p-5 rounded-lg shadow-md w-80 overflow-hidden">
        <img src="<%= user.image %>" alt="<%= user.name %>" class="w-full h-48 object-center object-cover rounded-t-lg mb-4">
        <h2 class="text-xl font-semibold mb-2"><%= user.name %></h2>
        <p class="text-gray-600 mb-2">Email: <%= user.email %></p>
        <p class="text-gray-600">Age: <%= user.age %></p>
        <div class="mt-4">
          <a href="/edit/<%= user._id %>" class="text-blue-500 hover:text-blue-700 mr-4">Update</a>
          <a href="/delete/<%= user._id %>" class="text-red-500 hover:text-red-700">Delete</a>
        </div>
      </div>
    <% }) %>

  </div>

</body>
</html>

